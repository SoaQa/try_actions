[flake8]
# Максимальная длина строки (PEP8 рекомендует 79, но 88 как в black удобнее)
max-line-length = 88

# Игнорируем часто мешающие проверки:
# E203, W503 — конфликтуют с black
# E501 — длина строки (black сам форматирует)
# F403 — "from module import *"
# F401 — "импорт не используется" (если часто юзаешь в __init__.py)
# D100-D499 — докстринги (если не нужны строгие требования)
extend-ignore =
    E203,
    W503,
    E501,
    F403,
    F401,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D106,
    D107

# Папки, которые точно не стоит проверять
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    .mypy_cache,
    .pytest_cache,
    .eggs,
    docs
